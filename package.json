{
  "name": "@modusoperandi/licit-style-service",
  "version": "1.1.0",
  "description": "reference REST endpoint for providing styles to licit editor",
  "main": "lib/app.js",
  "scripts": {
    "test": "nyc mocha",
    "build": "tsc -p tsconfig.json",
    "format": "prettier src --write",
    "start": "npm run build && DATA_ROOT=. node .",
    "docker": "docker build . -t licit-style-service:latest",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "licit"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.16",
    "@types/express": "^4.17.11",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@types/sinon": "^9.0.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "chai": "^4.3.4",
    "eslint": "^7.23.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "sinon": "^9.2.4",
    "winston": "^3.3.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": "spec",
    "spec": [
      "src/**/*.test.ts"
    ],
    "watch-files": [
      "src/**/*.ts"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "lcovonly",
      "text-summary",
      "html"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
